@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>List of Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added.</h3>
} 

@foreach (Stylist stylist in Model)
{
  <h3><a href='/stylists/@stylist.Id'>@stylist.StylistName</a></h3>
}

<p><a href='/'>Return to Main Menu</a></p>