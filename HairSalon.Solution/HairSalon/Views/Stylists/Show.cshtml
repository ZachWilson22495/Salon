@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>@Model["stylist"].StylistName</h2>
<h4>@Model["stylist"].StylistDescription</h4>

<h3>These are all the relevant clients:</h3>

<ol>
@foreach (Client client in @Model["clients"])
{
  <li><a href='/stylists/@Model["stylist"].Id/clients/@client.Id'>@client.ClientName</a></li>
}
</ol>

<p><a href='/stylists/@Model["stylist"].Id/clients/new'>Add a new client</a></p>
<p><a href='/stylists'>Return to Stylist Roster</a></p>
<p><a href='/'>Return to Main Menu</a></p>